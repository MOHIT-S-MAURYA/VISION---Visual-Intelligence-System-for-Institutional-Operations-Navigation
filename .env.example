# VISION - Visual Intelligence System Configuration

# Database Configuration
DATABASE_URL=sqlite:///./vision.db
# For PostgreSQL: DATABASE_URL=postgresql://username:password@localhost:5432/vision_db

# Security Settings
SECRET_KEY=vision-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
APP_NAME=VISION - Visual Intelligence System for Institutional Operations & Navigation
APP_VERSION=1.0.0
DEBUG=True

# AI & Computer Vision Settings
FACE_DETECTION_CONFIDENCE=0.6
FACE_RECOGNITION_TOLERANCE=0.6
MAX_FACES_PER_IMAGE=100

# File Storage Configuration
UPLOAD_DIR=./uploads
STUDENT_IMAGES_DIR=./uploads/students
CLASS_IMAGES_DIR=./uploads/classes

# FAISS Index Configuration
FAISS_INDEX_PATH=./vision_embeddings.index
STUDENT_IDS_PATH=./vision_student_ids.pkl

# Performance Settings
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
IMAGE_QUALITY=85
THUMBNAIL_SIZE=150

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/vision.log

# Optional: External Services
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Optional: Cloud Storage
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=vision-storage
# AWS_REGION=us-east-1
